<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('./parts/nav.ejs',{page:"home"}) %>

    <div class="salad my-5">
      <div class="alert alert-primary" role="alert">
        Salad
      </div>
      <div class="d-flex p-2">
        <% salad.forEach(element => { %>
            <div class="card  m-2" style="width: 18rem">
              <img src="<%= element.image %>" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title"><%= element.title %></h5>
                <p class="card-text">
                    <%= element.price %> $
                </p>
                <a href="/plates/<%= element._id %>" class="btn btn-primary">show more ..</a>
              </div>
            </div>
            <% }) %>
      </div>
    </div>

    <div class="pizza my-5">
        <div class="alert alert-primary" role="alert">
          Pizza
        </div>
        <div class="d-flex p-2">
          <% pizza.forEach(element => { %>
              <div class="card  m-2" style="width: 18rem">
                <img src="<%= element.image %>" class="card-img-top" alt="..." />
                <div class="card-body">
                  <h5 class="card-title"><%= element.title %></h5>
                  <p class="card-text">
                      <%= element.price %> $
                  </p>
                  <a href="/plates/<%= element._id %>" class="btn btn-primary">show more ..</a>
                </div>
              </div>
              <% }) %>
        </div>
      </div>

      <div class="pasta my-5">
        <div class="alert alert-primary" role="alert">
          Pasta
        </div>
        <div class="d-flex p-2">
          <% pasta.forEach(element => { %>
              <div class="card  m-2" style="width: 18rem">
                <img src="<%= element.image %>" class="card-img-top" alt="..." />
                <div class="card-body">
                  <h5 class="card-title"><%= element.title %></h5>
                  <p class="card-text">
                      <%= element.price %> $
                  </p>
                  <a href="/plates/<%= element._id %>" class="btn btn-primary">show more ..</a>
                </div>
              </div>
              <% }) %>
        </div>
      </div>
  </body>
</html>
